# Example environment variables file
# Copy this to .env and modify as needed

# Database
DATABASE_URL=sqlite:///database.db

# Face Recognition Settings
FACE_RECOGNITION_THRESHOLD=0.5
FACE_RECOGNITION_MODEL=large

# Admin Settings
ADMIN_TOKEN=admin_secret_token_2023

# File Paths
FACE_ID_DOCS_PATH=Face ID docs
EXCEL_FILE_PATH=Face ID docs/list of students.xlsx
PHOTOS_PATH=Face ID docs/photos

# Performance Settings (optional)
USE_FAISS=false
USE_ANNOY=false

# Embedding Cache
EMBEDDINGS_CACHE_PATH=data/embeddings.npy
EMBEDDINGS_METADATA_PATH=data/embeddings_metadata.json

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Flask Settings
SECRET_KEY=your-secret-key-change-in-production
DEBUG=false